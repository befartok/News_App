<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_layout"
    android:layout_width="360dp"
    android:layout_height="89dp"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sourceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Toprankblog.com"
        app:layout_constraintStart_toEndOf="@+id/sourcesLogoImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="description"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/newsImageView"
        app:layout_constraintTop_toBottomOf="@+id/sourcesLogoImageView"
        app:layout_constraintVertical_bias="0.75" />

    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thumbnail" />

    <ImageView
        android:id="@+id/sourcesLogoImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/newsImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vecteezy_global_news_icon_style_7436645" />

</androidx.constraintlayout.widget.ConstraintLayout>